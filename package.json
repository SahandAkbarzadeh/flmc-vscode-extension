{
  "name": "flmc-vscode-extension",
  "displayName": "flmc-vscode-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/package.json",
    "workspaceContains:**/package-lock.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidebar-treeview",
          "title": "FLMC",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "sidebar-treeview": [
        {
          "id": "sidebar-outline-elements",
          "name": "Form Elements",
          "when": "config.flmc.location == sidebar"
        }
      ]
    },
    "configuration": [
      {
        "type": "object",
        "title": "FLMC config",
        "properties": {
          "flmc.location": {
            "type": "string",
            "enum": [
              "sidebar"
            ],
            "default": "sidebar",
            "description": "Where to display FLMC menu"
          },
          "flmc.ignoredElementsInInspector": {
            "type": "string",
            "default": "Space",
            "description": "seprate with `,`"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.flmc.goto-element-line",
        "title": "Goto element line",
        "category": "FLMC"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.39.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.5.1"
  }
}
